<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.estimote.configuration.GameActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/beaconName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEACON NAME "
            android:textSize="25dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <TextView
            android:id="@+id/beaconScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORE"
            android:textSize="25dp"
            android:layout_toEndOf="@id/beaconName"/>

        <TextView
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="PLAYER NAME "
            android:textSize="25dp"
            android:layout_below="@id/beaconScore"/>

        <TextView
            android:id="@+id/playerScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="SCORE"
            android:textSize="25dp"
            android:layout_toEndOf="@id/playerName"
            android:layout_below="@id/beaconScore"/>

        <Button
            android:id="@+id/rockButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROCK"
            android:textSize="15dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:layout_below="@id/playerName"/>

        <Button
            android:id="@+id/paperButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAPER"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:layout_below="@id/playerName"
            android:layout_toEndOf="@id/rockButton"/>

        <Button
            android:id="@+id/scissorsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCISSORS"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:layout_below="@id/playerName"
            android:layout_toEndOf="@id/paperButton"/>

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="15dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:layout_below="@id/rockButton"/>

        <Button
            android:id="@+id/scoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scores"
            android:textSize="15dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:layout_below="@id/resetButton"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>
